<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.way.mat.klogger.ui.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ll_controls">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logs"/>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_controls"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_refresh"
            android:text="Refresh logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_email"
            android:text="Send email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_toggle_overlay"
            android:text="Toggle overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/action_increase_text_size"
                android:text="Increase text size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/action_decrease_text_size"
                android:text="Decrease text size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_filter"
            android:text="Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_api_call"
            android:text="Send API Call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_clear_logs"
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>



</RelativeLayout>
